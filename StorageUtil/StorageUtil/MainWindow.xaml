<metro:MetroWindow
	x:Class="StorageUtil.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:StorageUtil"
	xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
	mc:Ignorable="d"
	GlowBrush="Black"
	BorderThickness="0"
	ResizeMode="CanResizeWithGrip"
	Title="Storage Helper" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>


		<StatusBar Grid.Row="1">
			<StatusBarItem DockPanel.Dock="Right">
				<TextBlock Text="{Binding AppVersion}" Margin="0,0,15,0" VerticalAlignment="Center" />
			</StatusBarItem>

			<StatusBarItem>
				<TextBlock Text="{Binding AppStatus}" VerticalAlignment="Center" />
			</StatusBarItem>
		</StatusBar>
	</Grid>
</metro:MetroWindow>
